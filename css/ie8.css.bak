@charset "utf-8";
*{margin:0; padding:0;}
ul,ol {list-style:none;}
a{text-decoration:none; color:#222;}
img{border:0;vertical-align:top;}
body{font-size:14px; font-family: "Crimson Text","¸¼Àº °íµñ";color:#fff;}
header,footer,section{display:block;}





.wrap{min-width:1400px; position:relative; overflow:hidden;}
.submenu{width:1400px; margin:0 auto;}
.dep001:overflow:hidden;

.header_wrap{width:100%; position:relative; z-index:110;}
.header{height:150px; background:#fff;}
.header .con1400{position:relative;}
.head_lang{position:absolute; top:40px; left:0; font-size:0; z-index:1;}
.head_lang a span{display:inline-block; vertical-align:top; margin-top:1px;}
.head_lang a:hover span{padding-bottom:2px; border-bottom:1px solid #fff1cc;}
.head_lang > span{font-size:15px; color:#656868; font-weight:300; padding:0 10px;}
.head_lang a > img{margin-right:5px;}


.head_mem{position:absolute; top:30px; right:0; font-size:0; z-index:1;}
.head_mem a{display:inline-block; font-size:15px; color:#9b9b9b; vertical-align:middle;}
.head_mem span{display:inline-block; font-size:15px; color:#2e2e2e; font-weight:300; padding:0 10px; vertical-align:middle;}
.head_mem .favorite{margin-left:20px;}

.header h1{position:absolute; top:16px; left:50%; margin-left:-35.5px;}
.header h1 a img{position:relative; width:240px; left:-150px;z-index:1;}
.header h1 > img{width:346px; position:absolute; top:-7px; left:-138.5px; opacity:0.15;}
.header .gnb{padding-top:99px; position:relative; letter-spacing:-1px;}
.header .gnb ul li{float:left; height:44px; margin-right:58px;}
.header .gnb ul li a{display:block;font-size:18px;padding:0 15px;}
.header .gnb ul li:last-of-type{margin-right:0;}
.header .gnb ul li img{margin-top:14px;}
.header .gnb ul li:hover{height:42px; border-bottom:2px solid #444;}
.header .gnb ul li:hover .depth2{display:block;}
.dep001 > li:hover > a{background:url(../images/li_hover.png);background-repeat:no-repeat; background-position:98% 55%;}
.header .gnb ul li.on{height:42px; border-bottom:2px solid #fce8b5;}




.depth2{width:100%; padding:10px 0; border-top:1px solid #949494; border-bottom:2px solid #fde9b5; background:#222; position:absolute; z-index:999;top:140%;left:0px; display:none;}
.depth2 h2{ width:300px; height:50px;float:left; line-height:50px; font-weight:300;}
.depth2 > div{font-size:14px; display:block; height:130px;}
.depth2 > div.on{display:block;}
.depth2 div > img{vertical-align:middle; width:298px; padding:0 20px; margin-right:60px;}
.depth2 div > ul{position:relative; top:-32px;left:520px;display:inline-block;width:80%;height:40px;}
.depth2 div > ul li{text-align:center;float:left;  height:35px; line-height:35px;}
.depth2 div > ul li:hover a {background:url(../images/li_hover.png);background-repeat:no-repeat; background-position:100% 43%; color:#fce8b5;}
.depth2 div > ul li ul{display:block;}
.depth2 div > ul li a{display:block; height:100%; line-height:35px;color:#fff;text-align:center;}
.depth2 div > ul li a img{margin-top:10px;}
